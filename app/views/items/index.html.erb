<h1>Adicionar Bebidas</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Produto</th>
      <th>Bebida</th>
      <th>Teor alcoolico</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.description %></td>
        <td><%= item.group.name ? item.group.name : '' %></td>
        <td><%= item.Teor_alcoolico %>%</td>
        <td><%= link_to 'Informacao', item %></td>
        <td><%= link_to 'Editar', edit_item_path(item) %></td>
        <td><%= link_to 'Excluir', item, method: :delete, data: { confirm: 'Tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Produto', new_item_path, class: 'btn btn-primary' %>
